<% content_for :title, "Join Chat" %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "username", "data-turbo-track": "reload" %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag "username", "data-turbo-track": "reload" %>
<% end %>

<div class="join-container">
  <h1>Challenge Chat App</h1>
  <input type="text" id="username" class="username-input" placeholder="Enter your username..." maxlength="50" autofocus>
  <button id="joinButton" class="join-button">Join Chat Room</button>
</div>
